drop table Employee

create table Employee(
id number(10) primary key,
hi_id number(10) unique,
name varchar(30),
dob varchar(20),
gen varchar(6),
email varchar(30),
alt_mail varchar(30),
ph_no varchar(12),
mob_no varchar(12),
policy_start_date varchar(20),
policy_period number(5),
tot_sum_ins number(20,10),
prem_amt number(20,10),
acc_no varchar(12),
bnk_name varchar(100),
ifsc varchar(10),
password varchar(20),
status number(1)
)
create table Admin(
id varchar2(10),
password varchar2(20)
)

create sequence hi_id
start with 100000001
increment by 1


insert into admin values(200000001,'admin')

create table dependents(

	emp_id number(10) foreign key,
	hi_id number(10),
	name varchar(30),
	relation varchar(20),
	dob varchar(20),
	gen varchar(6),
	policy_start_date varchar(20),
	policy_period number(5),
	tot_sum_ins number(20,10),
	prem_amt number(20,10)
	
)

create table dependents(

	emp_id number(10),
	hi_id number(10),
	name varchar(30),
	relation varchar(20),
	dob varchar(20),
	gen varchar(6),
	policy_start_date varchar(20),
	policy_period number(5),
	tot_sum_ins number(20,10),
	prem_amt number(20,10)
	
)

select * from dependents

ALTER TABLE dependents
  ADD CONSTRAINT fk_name 
  FOREIGN KEY (emp_id) 
  REFERENCES employee(id) 
  ON DELETE CASCADE;
  
  
create table domclaim(

	domClmId number(10),
	empId number(10),
	benefName varchar(30),
	empHiId number(10),
	phoneNumber varchar(10),
	address varchar(100),
	altEmailId varchar(50),
	trtStartDate varchar(20),
	trtEndDate varchar(20),
	dateOfInjuiry varchar(20),
	nameOfDoctor varchar(30),
	DetailsOfInjuiry varchar(30),
	totalClaimAmt number(20,10)

)

create sequence claim_id
start with 400000001
increment by 1

create table hosclaim(

	hosClmId number(10),
	empId number(10),
	empName varchar(30),
	EmailId varchar(50),
	mobNumber varchar(10),
	companyName varchar(20),
	nameOfPatient varchar(30),
	gender varchar(10),
	relationship varchar(15),
	age number(4),
	HiId number(10),
	state varchar(30),
	city varchar(30),
	hosName varchar(50),
	address varchar(100),
	dateOfAdmission varchar(20),
	dateOfDischarge varchar(20),
	nameOfDoctor varchar(30),
	DetailsOfInjuiry varchar(30),
	reasonForInjury varchar(30),
	totalClaimAmt number(20,10)

)

alter table hosclaim add status number(1)
alter table domclaim add status number(1)


update hosclaim set status=0

select * from domclaim

create table Hospital (id number(10) primary key, name varchar2(30), address varchar2(30), city varchar2(30), state varchar2(20), pin number(10), std number(10), phone varchar2(15))

alter table hosclaim add approvedAmt number(20,10);
alter table domclaim add approvedAmt number(20,10);

update hosclaim set approvedAmt=0;
update domclaim set approvedAmt=0;

update dependents set status=0;

